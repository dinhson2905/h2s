<div class="container-fluid">
  <h2>Kiểm tra bảng chữ cái</h2>
  <div class="test_container container">
    <div id="myCarousel" class="carousel slide Card" data-ride="carousel">
    
      <div class="test carousel-inner" role="listbox">
        <% @tests.each_with_index do |t, index| %>
          <%= render 'testcard', t: t, index: index %>
        <% end %>
        <p class="back-button"><i class="fas fa-backward"></i><%= link_to "Back", :back %></p>
      </div>
      
      <div class="prev" href="#myCarousel" role="button" data-slide="prev" >
        <img src="https://img.icons8.com/nolan/96/000000/double-left.png">
      </div>

      <div class="next" href="#myCarousel" role="button" data-slide="next">
        <img src="https://img.icons8.com/nolan/96/000000/double-right.png">
      </div>
    </div>
    
  <div>
</div>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script >
  $('.carousel').carousel({
    interval: false
  });
  $(document).on('click', ".active .answer input", function() {
    var answer = $(this).attr('value');
    var correct_answer = $(".active ").attr("value");
    if(correct_answer == answer) $(this).css("background-color","green");
    else{
      $(this).css("background-color","red");
      $(".active .correct").css("background-color","green");
    }        
  });

</script>