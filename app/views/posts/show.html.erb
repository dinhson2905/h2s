<div class="postform">
<div style="background-color:#e6f2ff;height:7px;"> </div>
<br>
<h1>Comment</h1>
<br>

<div>
   

    <div style="margin-left:20px;margin-right:10px;background-color: #336600 ;border-radius:60px;height:60px;width:60px;padding-top:15px;padding-left:25px;float:left;" >
    <strong > <%= @post.user.id %><br></strong>
  </div>
  <div style="padding-left:30px;">
    <strong> <%= @post.user.name %><br></strong>
    <i> <%= @post.user.email %><br></i>
    <i><%= @post.created_at %><br></i><br>
  </div>
 <div style="padding-left:10%">
       <p  style="margin-left:30px;font-size:15px;margin-right: 30px"><%= @post.post %><br></p>
  </div>

   
  </div >
  <br>
  
  <div style="background-color:#d6d6c2;height:3px;"> </div>

  <h3 style="margin-left:20px; margin-top:20px">Comment</h3>
  <br>
    <% @post.post_comment.each do |post_comment|%>

    <div style="margin-left:10px;background-color: #cccc00 ;border-radius:50px;height:50px;width:50px;padding-top:10px;padding-left:20px;float:left;" >
      <strong > <%= post_comment.user.id %><br></strong>
    </div>
    <div style="height:150px;background-color: #e6e6e6;border-radius:15px;margin-left:70px;margin-right:10px;margin-bottom:30px;">
          <div style="padding-left:20px;">
            <strong> <%= post_comment.user.name %><br></strong>
            <i> <%= post_comment.user.email %><br></i>
            <i><%= post_comment.created_at %><br></i><br>
          </div>
         <div style="padding-left:30px;width: 100px !important">
               <p  style="margin-left:50px;font-size:15px;"><%= post_comment.comment %><br></p>
          </div>
          <br>
    </div>
   
    <% end %>
  
    <div  >
      <%= form_with(model: @post_comment, local: true) do |form| %>
      <div class= "field">
      
        <%= form.text_field :comment ,style:"width:70%;padding-left:20px;padding-right:20px;margin-left:25px;margin-right:5px;height:50px;float:left;border-radius:10px 10px;background-color:#e0e0d1" %>
      <%= form.hidden_field :post_id, :value => @post.id %>
      </div>
      <%= form.submit style:"margin-left:5px;height:48px;border-radius:10px 10px;background-color:#c3c388;" %><br><br>
    <br>
      <div class="actions"  style="margin-left:250px;">
        
        <div style="margin-left:60px;padding-bottom:70px;">
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Back', posts_path %>
        </div>
      </div>
      <% end %>

      
     
    </div>
</div>